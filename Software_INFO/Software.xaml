                    <ImageBrush ImageSource="T:\IP_ADDRESS\IP_ADDRESS\SRC\lines.png"/>
                </MenuItem.Background>
                <MenuItem Header="Imposta percorsi file" Click="Menu_percorsi" Background="Ivory">
